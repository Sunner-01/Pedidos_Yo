@model Pedidos_Yo.Models.ProductModel

@{
    ViewData["Title"] = "Detalles del Producto";
    ViewData["Layout"] = User.IsInRole("Cliente") ? "~/Views/Shared/_LayoutCliente.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-neon text-center mb-4">Detalles del Producto</h1>
    <div class="card card-gamer">
        <div class="card-body">
            <h4>@Html.DisplayFor(model => model.Nombre)</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Nombre</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
                <dt class="col-sm-2">Descripción</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descripcion)</dd>
                <dt class="col-sm-2">Precio</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Precio)</dd>
                <dt class="col-sm-2">Stock</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Stock)</dd>
            </dl>
            <div>
                <a asp-action="Index" class="btn btn-gamer">Volver</a>
                @if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gamer">Editar</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
                }
            </div>
        </div>
    </div>
</div>