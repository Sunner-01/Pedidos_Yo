@model Pedidos_Yo.Models.OrderModel

@{
    ViewData["Title"] = "Crear Pedido";
    ViewData["Layout"] = User.IsInRole("Cliente") ? "~/Views/Shared/_LayoutCliente.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-neon text-center mb-4">Crear Pedido</h1>
    <div class="card card-gamer">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (!User.IsInRole("Cliente"))
                {
                    <div class="form-group">
                        <label for="ClienteId" class="control-label">Cliente</label>
                        <select asp-for="ClienteId" class="form-control form-control-gamer" asp-items="ViewBag.ClienteId"></select>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <label class="control-label">Producto</label>
                    <select name="ItemProductId" class="form-control form-control-gamer" asp-items="ViewBag.Productos"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Cantidad</label>
                    <input name="ItemCantidad" class="form-control form-control-gamer" type="number" min="1" value="1" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-gamer" />
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}