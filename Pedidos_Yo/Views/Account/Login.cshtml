@model Pedidos_Yo.Models.LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row justify-content-center">
    <div >
        <div class="card card-gamer">
            <div class="card-body p-4">
                <h2 class="text-center text-neon mb-3">Pedidos_Yo</h2>
                <h4 class="text-center text-white mb-4">Iniciar Sesión</h4>

                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label text-white">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control form-control-gamer" placeholder="ejemplo@correo.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label text-white">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control form-control-gamer" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-gamer btn-block">Iniciar Sesión</button>
                    </div>
                </form>

                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}