@model Pedidos_Yo.Models.OrderModel

@{
    ViewData["Title"] = "Detalles del Pedido";
    ViewData["Layout"] = User.IsInRole("Cliente") ? "~/Views/Shared/_LayoutCliente.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-neon text-center mb-4">Detalles del Pedido</h1>
    <div class="card card-gamer">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Fecha</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Fecha)</dd>
                <dt class="col-sm-2">Estado</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Estado)</dd>
                <dt class="col-sm-2">Total</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Total)</dd>
                <dt class="col-sm-2">Cliente</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Cliente.Email)</dd>
                <dt class="col-sm-2">Productos</dt>
                <dd class="col-sm-10">
                    @foreach (var item in Model.Items)
                    {
                        <span>@item.Product.Nombre (x@item.Cantidad) - @item.Subtotal</span>
                    
                        <br />
                    }
                </dd>
            </dl>
            <div>
                <a asp-action="Index" class="btn btn-gamer">Volver</a>
                @if (Model.Estado == "Pendiente" && User.IsInRole("Cliente"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gamer">Editar</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Cancelar</a>
                }
            </div>
        </div>
    </div>
</div>