@model Pedidos_Yo.Models.OrderModel

@{
    ViewData["Title"] = "Editar Pedido";
    ViewData["Layout"] = User.IsInRole("Cliente") ? "~/Views/Shared/_LayoutCliente.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-neon text-center mb-4">Editar Pedido</h1>
    <div class="card card-gamer">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                @if (!User.IsInRole("Cliente"))
                {
                    <div class="form-group">
                        <label asp-for="ClienteId" class="control-label">Cliente</label>
                        <select asp-for="ClienteId" class="form-control form-control-gamer" asp-items="ViewBag.ClienteId"></select>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <label class="control-label">Producto</label>
                    <select name="ItemProductId" class="form-control form-control-gamer" asp-items="ViewBag.Productos" id="ItemProductId"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Cantidad</label>
                    <input name="ItemCantidad" class="form-control form-control-gamer" type="number" min="1" value="@(Model.Items.FirstOrDefault()?.Cantidad ?? 1)" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-gamer" />
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            document.getElementById('ItemProductId').value = '@(Model.Items.FirstOrDefault()?.ProductId ?? 0)';
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}